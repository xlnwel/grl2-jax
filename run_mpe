#!/bin/bash

export PYTHONPATH=.

# algos=(happo)
algos=(happo_lka)
suite=mpe
envs=(simple_tag)
config=simple_tag
na=3
args1=(2)
args2=(1 3 5)
date=$(date +"%m%d")
info=""
ld="${suite}-logs"
gpus=$(nvidia-smi -L | wc -l)

if [ -z "$info" ]; then
    n=$date
else
    n="$date-$info"
fi

# ========== scripts for happo ===========

# i=0
# INF_MAC_NODE_RANK=0
